<?xml version="1.0" encoding="UTF-8" ?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description
	>Comprehensive access to duplicate management functionality including Customer and Duplicate Match objects with all associated fields and operations.</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>Duplicate Management Access</label>
    
    <!-- Custom Object Permissions -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Customer__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Duplicate_Match__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
